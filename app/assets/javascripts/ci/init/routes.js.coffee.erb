CI.config ($routeProvider, $locationProvider) ->

  $routeProvider.
    when('/jobs/:jobId',
      templateUrl: "<%= asset_path 'assets/jobs/show.html' %>",
      controller: "JobCtrl"
    ).
    when('/builds/:buildId',
      templateUrl: "<%= asset_path 'assets/builds/show.html' %>",
      controller: "BuildCtrl"
    ).
    when('/projects/:projectId/builds',
      templateUrl: "<%= asset_path 'assets/builds/index.html' %>",
      controller: "BuildsCtrl"
    ).
    when('/github_repos',
      templateUrl: "<%= asset_path 'assets/github_repos/index.html' %>",
      controller: "GithubReposCtrl"
    ).
    when('/',
      templateUrl: "<%= asset_path 'assets/projects/index.html' %>",
      controller: "ProjectsCtrl"
    )

  $locationProvider.html5Mode true
