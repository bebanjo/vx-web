.github-repos


  %a.github-repos-sync.pull-right{ class: "btn btn-small btn-primary", "ng-click" => "syncGithubRepos()" }
    Sync Now

  %input.github-repos-search.form-control{ type: :search, placeholder: "Type to search...", 'ng-model' => 'query' }

  .github-repos-list

    .gthub-repos-empty{ 'ng-hide' => 'repos.length' }
      No repositories loaded

    .github-repo{ 'ng-repeat' => "repo in repos | filter:query" }

      %a.octocat{ href: '{{repo.html_url}}', title: "View on Github" }
        %i.icon-github-sign

      %label
        %input{ type: 'checkbox', 'ng-model' => 'repo.subscribed', 'ng-change' => "changeSubscription(repo)"}
        %span {{repo.full_name}}
