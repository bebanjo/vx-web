.github-repos

  .github-repos-sync.pull-right
    %a{ class: "btn btn-small btn-primary", "ng-class" => "(inSync() ? 'disabled' : '')", "ng-click" => "syncGithubRepos()" }
      Sync Now

  .github-repos-search
    %input.form-control{ autofocus: true, type: :search, placeholder: "Type to search...", 'ng-model' => 'query' }

  .github-repos-show{ 'ng-show' => 'repos.length > 0' }
    %small Show 30 of {{ repos.length }} repositories

  .github-repos-list

    .github-repos-empty{ 'ng-hide' => 'repos.length > 0' }
      No repositories loaded

    .github-repo.small-text{ 'ng-repeat' => "repo in repos | filter:query | limitTo: 30" }

      %a.octocat{ href: '{{repo.html_url}}/settings/hooks', title: "View on Github", "target" => "blank" }
        %i.fa.fa-wrench

      %label
        %input{ type: 'checkbox', 'ng-disabled' => 'repo.disabled', 'ng-model' => 'repo.subscribed', 'ng-change' => "changeSubscription(repo)"}
          %span {{repo.full_name}}
