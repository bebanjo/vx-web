.row.wrapper.border-bottom.white-bg.page-heading
  .col-lg-12
    %h2 Add Project

.wrapper.wrapper-content.animated.fadeInRight
  .row
    .col-lg-12
      .ibox
        .ibox-content
          %small
            Show {{ [(repos|filter:query).length, 30] | min }} of {{ repos.length }} repositories

          %div.search-form.m-b-lg
            .row
              .col-sm-8
                %input.form-control.input-lg{ type: "search", placeholder: "Type to search project...", 'ng-model' => "query" }
              .col-sm-4
                .pull-right
                  %a.btn.btn-primary.btn-lg{ 'ng-disabled' => 'wait', 'ng-click' => 'sync()', style: "width: 7em" }
                    %span{'ng-show' => "wait"}
                      Wait...
                    %span{'ng-hide' => 'wait'}
                      Sync Now

          .m-t-lg
            %div{ 'ng-repeat' => "repo in repos | filter:query | limitTo: 30", 'ng-controller' => "UserRepoCtrl" }
              .hr-line-dashed
              .search-result

                .pull-right
                  .ui-switch.ui-switch-md{ value: "repo.subscribed", 'disabled' => "repo.disabled || repo.wait || wait" }

                %h3
                  %a{ 'ng-show' => 'repo.project_id', href: "/ui/projects/{{ repo.project_id }}/builds"}
                    {{ repo.full_name }}
                  %span{ style: "color:#676C6A", 'ng-hide' => 'repo.project_id' }
                    {{ repo.full_name }}
                %a.search-link{ href: "{{ repo.html_url }}"}
                  %i.fa.fa-external-link
                  {{ repo.html_url }}
                %p {{ repo.description || "[no description given]" }}

