.row.wrapper.border-bottom.white-bg.page-heading
  .col-lg-12
    %h2 Add Project

.wrapper.wrapper-content.animated.fadeInRight
  .row
    .col-lg-12
      .ibox
        .ibox-content
          %small
            Show {{ [(repos|filter:query).length, 30] | min }} of {{ repos.length }} repositories

          %div.search-form
            .row
              .col-sm-8
                %input.form-control.input-lg{ type: "search", placeholder: "Type to search project...", 'ng-model' => "query" }
              .col-sm-4
                .pull-right
                  %a.btn.btn-primary.btn-lg{ 'ng-disabled' => 'wait', 'ng-click' => 'sync()', style: "width: 7em" }
                    %span{'ng-show' => "wait"}
                      Wait...
                    %span{'ng-hide' => 'wait'}
                      Sync Now

          %div{ 'ng-repeat' => "repo in repos | filter:query | limitTo: 30" }
            .hr-line-dashed
            .search-result

              .pull-right
                %span.btn.btn-outline{ 'ng-show' => 'repo.wait' }
                  %span.ajax-loader
                %span{ 'ng-hide' => "wait || repo.wait" }
                  %button.user-repo-toggle.btn.btn-link{ href: "javascript://", 'ng-disabled' => 'repo.disabled', 'ng-click' => 'changeSubscription(repo)', 'ng-show' => 'repo.subscribed', title: "Add this project to Vexor.io" }
                    %i.fa.fa-check-square-o.fa-2x.text-navy

                  %button.user-repo-toggle.btn.btn-link{ href: "javascript://", 'ng-click' => 'changeSubscription(repo)', 'ng-hide' => 'repo.subscribed', style: "opacity: 0.8" }
                    %i.fa.fa-check-square-o.fa-2x.text-muted

              %h3
                %a{ 'ng-show' => 'repo.project_id', href: "/ui/projects/{{ repo.project_id }}/builds"}
                  {{ repo.full_name }}
                %span{ style: "color:#676C6A", 'ng-hide' => 'repo.project_id' }
                  {{ repo.full_name }}
              %a.search-link{ href: "{{ repo.html_url }}"} {{ repo.html_url }}
              %p {{ repo.description || "[no description given]" }}

