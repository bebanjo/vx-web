.row.wrapper.border-bottom.white-bg.page-heading
  .col-md-9
    %h2 Projects

.wrapper.wrapper-content.animated.fadeIn{ 'ng-show' => "projects.length > 0" }
  .row
    .col-lg-12
      .ibox
        .ibox-title
          %h5 Recent activity

        .ibox-content
          %div

            .feed-activity-list

              .feed-element{'ng-repeat' => "project in projects | orderBy:'last_build_at':true", 'ng-click' => "go(project)", style: "cursor: pointer;"}
                %a.pull-left
                  %img.img-circle{ 'ng-src' => "{{ projectAvatar(project) }}" }

                .media-body
                  %span.pull-right.app-task-status{ 'task' => 'project.last_build', 'ng-show' => "project.last_build" }

                  %strong {{ projectAuthor(project) }}
                  {{ projectLastAction(project) }}
                  %a{ href: "/ui/projects/{{ project.id }}/builds" }
                    {{ project.name }}
                  %br
                  %small.text-muted
                    %i.fa.fa-clock-o
                    {{ projectLastActionAt(project) | fromNow }}
