.row.wrapper.border-bottom.white-bg.page-heading
  .col-md-9
    %h2 Dashboard

.wrapper.wrapper-content.animated.fadeInDown{ 'ng-show' => 'builds && builds.length === 0 && projects && projects.length > 0' }
  .row
    .col-lg-12
      .ibox
        .ibox-title
          %h5 No pending jobs - Please get your hands dirty


.wrapper.wrapper-content.animated.fadeInDown{ 'ng-show' => 'builds.length > 0' }
  .row.projects-list
    .col-md-6{ 'ng-repeat' => "build in builds | orderBy:'updated_at':true | limitTo:30" }
      .contact-box
        %a{ 'ng-href' => '/ui/projects/{{ build.project_id }}/builds' }
          .col-lg-12.project

            %h3
              {{ build.project_name }}

            .hr-line-dashed

            %p
              %small
                commited to
                %a{ href: "/ui/projects/{{ build.project_id }}/builds" }
                  {{ build.project_name }}
                on {{ build.branch }}
            %p
              %small.text-muted
                %i.fa.fa-clock-o
                {{ build.updated_at | fromNow }}

            //.app-last-builds-chart.project-chart{ project: "project" }

          .clearfix

.wrapper.wrapper-content.animated.fadeInDown{ 'ng-show' => 'projects.length > 0' }
  .row.projects-list
    .col-md-6{ 'ng-repeat' => "project in projects | orderBy:projectOrderBy:true" }
      .contact-box
        %a{ 'ng-href' => '/ui/projects/{{ project.id }}/builds' }
          .col-lg-12.project

            %h3
              {{ project.name }}

            .hr-line-dashed

            %p
              %small {{ projectEventName(project) }}
            %p
              %small.text-muted
                %i.fa.fa-clock-o
                {{ projectLastActionAt(project) | fromNow }}

            .app-last-builds-chart.project-chart{ project: "project" }

          .clearfix
