.session-providers

  - unless any_providers_enabled?
    .alert.alert-danger
      Cannout found any conguration for Github

  - unless @user && @user.valid?
    .alert.alert-danger
      - if @company
        - @company.errors.full_messages.each do |e|
          %p= "Company: #{e}"
      - if @user
        - @user.errors.full_messages.each do |e|
          %p= "User: #{e}"

  = form_tag users_signup_path, role: "form" do
    .form-group
      %label.control-label{ for: "user_email" } Email
      = text_field_tag "email", @email, placeholder: "me@example.com", class: "form-control", id: "user_email"

    .form-group
      %label.control-label{ for: "company_name" } Company
      = text_field_tag "company", @company_name, placeholder: "Company Name", class: "form-control", id: "company_name"

    %hr

    .form-group
      = submit_tag "Continue Sing Up", class: "btn btn-sm btn-primary"
