!!!
%html{ "ng-app" => "CI" }
  %head
    %link{ 'ref' => 'stylesheet', 'type' => 'text/css', 'href' => '//fonts.googleapis.com/css?family=PT+Sans:400,700,400italic&subset=latin,cyrillic' }
    %title CI
    = stylesheet_link_tag "//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css"
    = stylesheet_link_tag "//netdna.bootstrapcdn.com/bootstrap/3.0.0-rc1/css/bootstrap.min.css"
    = stylesheet_link_tag "application", media: "all"
    = csrf_meta_tags

  %body

    .container

      %ng-include{ 'src' => "\"#{asset_path 'assets/layouts/menu.html' }\"" }

      .ng-view

    = javascript_include_tag '//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js'
    = javascript_include_tag '//ajax.googleapis.com/ajax/libs/angularjs/1.0.7/angular.min.js'
    = javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.4.4/underscore-min.js'
    = javascript_include_tag '//cdn.jsdelivr.net/restangular/latest/restangular.min.js'
    = javascript_include_tag 'application'
