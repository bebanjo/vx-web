!!!
%html{ "ng-app" => "CI" }
  %head
    %title CI
    = stylesheet_link_tag "application", media: "all"
    = stylesheet_link_tag "//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css"
    = stylesheet_link_tag '//fonts.googleapis.com/css?family=PT+Sans:400,700,400italic&subset=latin'
    = stylesheet_link_tag "//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.no-icons.min.css"
    = csrf_meta_tags

  %body

    .container

      %ng-include{ 'src' => "\"#{asset_path 'assets/layouts/menu.html' }\"" }

      .ng-view

    = javascript_include_tag '//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js'
    = javascript_include_tag '//ajax.googleapis.com/ajax/libs/angularjs/1.0.7/angular.min.js'
    = javascript_include_tag '//ajax.googleapis.com/ajax/libs/angularjs/1.0.7/angular-resource.min.js'
    = javascript_include_tag 'application'
